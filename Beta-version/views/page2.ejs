<%# CATALOG %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./css/styleCatalog.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    

    <title>Catalog</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow">
        <div class="container">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="/catalog">Buy</a></li>
                <li class="nav-item"><a class="nav-link" href="/catalog">Rent</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Sell</a></li>
            </ul>
            <a class="navbar-brand mx-auto" href="/"><img src="/pics/Black White Simple House Logo.svg" alt="Logo"></a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="/services">Services</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Help</a></li>
            </ul> 
        </div>
    </nav>

    <header class="header text-center">
        <h1>House Catalog</h1>
        <p>Here are the available houses</p>
    </header>

    <form action="/search" method="get" class="d-flex w-100">
        <input type="text" name="address" class="form-control" placeholder="Enter a city or ZIP code (Zapopan, 43243)" aria-label="Search Address" aria-describedby="search-button" required>
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary" id="search-button">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>                              
        </div>
    </form>

    <section class="catalog container mt-4">
        <div class="row">
            <% if (noHousesMessage) { %>
                <p><%= noHousesMessage %></p>
                <% } else { %>
            <% Houses.forEach(house => { %>
                <div class="col house-item">
                    <div class="card mb-4">
                        <div class="house-image">
                            <img src="<%= house.imageurl %>" class="card-img-top" alt="Image of <%= house.description %>">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= house.name %></h5>
                            <p class="card-text"><strong>City:</strong> <%= house.city %></p>
                            <p class="card-text"><strong>ZIP Code:</strong> <%= house.zipCode %></p>
                            <p class="card-text"><strong>Price:</strong> $<%= house.price.toLocaleString() %></p>
                            <a href="/house" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
        </div>
            <% }) %>
        <% } %>
    </section>

    



    <footer class="footer bg-light text-center py-3">
        <div class="footer-content">
            <p>&copy; 2024 House Search</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
